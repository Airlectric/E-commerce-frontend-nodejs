<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../partials/header"); %>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Payment Verification</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f9f9fc;
      color: #333;
      line-height: 1.6;
    }
    .container {
      max-width: 800px;
      margin: auto;
      padding: 20px;
    }
    .card {
      border: none;
      border-radius: 12px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    }
    .card-header {
      background-color: #003366;
      color: #fff;
      padding: 15px 20px;
      border-radius: 12px 12px 0 0;
      font-weight: 500;
      font-size: 1.1rem;
    }
    .card-body {
      padding: 25px;
    }
    .info-row {
      display: flex;
      justify-content: space-between;
      margin-bottom: 10px;
    }
    .info-row label {
      font-weight: bold;
      color: #555;
    }
    .info-row span {
      color: #333;
    }
    .btn-primary {
      background-color: #003366;
      border-color: #003366;
      color: #fff;
    }
    .btn-primary:hover {
      background-color: #002244;
      border-color: #002244;
    }
    .alert {
      margin-top: 15px;
      padding: 20px;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <div class="card shadow-sm">
      <div class="card-header">
        <h5 class="mb-0">Payment Verification Result</h5>
      </div>
      <div class="card-body">
        <%
          // Flatten the nested response.
          let verificationData = null;
          if (data && data.data && data.data.data && data.data.data.data) {
            verificationData = data.data.data.data;
          }
          
          // Determine a display value for payment status.
          let paymentStatusDisplay = "N/A";
          if (verificationData && verificationData.status !== undefined) {
            if (typeof verificationData.status === 'string') {
              paymentStatusDisplay = verificationData.status.charAt(0).toUpperCase() + verificationData.status.slice(1);
            } else if (typeof verificationData.status === 'boolean') {
              paymentStatusDisplay = verificationData.status ? "Success" : "Failed";
            } else {
              paymentStatusDisplay = String(verificationData.status);
            }
          }
        %>
        
        <% if (verificationData && paymentStatusDisplay.toLowerCase() === "success") { %>
          <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">Payment Verified Successfully!</h4>
          </div>
        <% } else { %>
          <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Payment Verification Failed</h4>
            <p><strong>Reason:</strong> <%= (verificationData && verificationData.gateway_response) || "No reason provided" %></p>
            <hr>
            <p class="mb-0">Please contact support if you believe this is an error.</p>
          </div>
        <% } %>

        <div class="mt-3">
          <div class="info-row">
            <label>Order ID:</label>
            <span><%= verificationData ? verificationData.reference : "N/A" %></span>
          </div>
          <div class="info-row">
            <label>Amount:</label>
            <span>GHS <%= verificationData && verificationData.amount ? (verificationData.amount / 100).toFixed(2) : "N/A" %></span>
          </div>
          <div class="info-row">
            <label>Payment Status:</label>
            <span><%= paymentStatusDisplay %></span>
          </div>
          <div class="info-row">
            <label>Payment Date:</label>
            <span><%= verificationData && verificationData.paid_at ? new Date(verificationData.paid_at).toLocaleString() : "N/A" %></span>
          </div>
          <div class="info-row">
            <label>Payment Channel:</label>
            <span><%= verificationData && verificationData.channel ? verificationData.channel : "N/A" %></span>
          </div>
          <div class="info-row">
            <label>Mobile Number:</label>
            <span><%= verificationData && verificationData.authorization && verificationData.authorization.mobile_money_number ? verificationData.authorization.mobile_money_number : "N/A" %></span>
          </div>
          <div class="info-row">
            <label>Bank:</label>
            <span><%= verificationData && verificationData.authorization && verificationData.authorization.bank ? verificationData.authorization.bank : "N/A" %></span>
          </div>
        </div>

        <a href="/order/orders" class="btn btn-primary mt-4">Back to Orders</a>
      </div>
    </div>
  </div>
  <%- include("../partials/footer") %>
</body>
</html>