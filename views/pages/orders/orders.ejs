<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Orders</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">My Orders</h1>
    <% if (orders.length > 0) { %>
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Products</th>
            <th>Created At</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
          <tr>
            <td><%= order._id %></td>
            <td>$<%= order.totalAmount.toFixed(2) %></td>
            <td><span class="badge bg-<%= order.status === 'Pending' ? 'warning' : order.status === 'Shipped' ? 'info' : order.status === 'Delivered' ? 'success' : 'danger' %>"><%= order.status %></span></td>
            <td>
              <ul>
                <% order.products.forEach(product => { %>
                <li><%= product.title %> (x<%= product.quantity %>)</li>
                <% }) %>
              </ul>
            </td>
            <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% } else { %>
    <p>You have no orders yet. <a href="/products">Start shopping now!</a></p>
    <% } %>
  </div>
</body>
</html>
