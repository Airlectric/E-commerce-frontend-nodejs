<%- include('../partials/header') %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border-0 shadow" style="border-radius: 10px;">
        <div class="card-body" style="background-color: #002147; color: #FFD700;">
          <h3 class="card-title text-center mb-4">Choose Your Role</h3>
          <p class="text-center mb-4">Please select one of the roles below to proceed. Your choice will determine your access level and features available in the application.</p>
          <form action="/user/update-role" method="POST">
            <div class="mb-3">
              <label for="role" class="form-label">Select Role</label>
              <select name="role" id="role" class="form-select" required>
                <option value="" disabled selected>Select your role</option>
                <option value="USER">User</option>
                <option value="SHOP_OWNER">Shop Owner</option>
              </select>
            </div>
            <button type="submit" class="btn btn-warning w-100">Update Role</button>
          </form>
          <div class="text-center mt-4">
            <i class="bi bi-person-circle" style="font-size: 50px; color: #FFD700;"></i> <!-- Bootstrap Icons -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>

<!-- Bootstrap JS and dependencies -->
<script src="//code.jquery.com/jquery-3.5.1.slim.min.js"></script> <!-- Ensure jQuery is loaded -->
<script src="//cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script> <!-- Popper.js for tooltips -->
<script src="//cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script> <!-- Updated Bootstrap JS -->

<style>
  body {
    background-color: #f8f9fa; /* Light background color */
  }
  .card {
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
  }
  .footer {
    margin-top: 50px;
    text-align: center;
    font-size: small;
  }
</style>

