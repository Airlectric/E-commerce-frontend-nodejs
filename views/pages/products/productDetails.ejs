<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../../partials/header"); %>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      background-color: #f9f9f9; /* Light background for the whole page */
    }
    .container {
      margin-top: 50px;
      background-color: white;
      border-radius: 15px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      padding: 30px;
    }
    .product-header {
      background-color: #003366;
      color: white;
      padding: 15px;
      border-radius: 10px;
      text-align: center;
    }
    .product-header h1 {
      font-size: 2.5rem;
    }
    .product-header p {
      font-size: 1.2rem;
      margin: 0;
    }
    .product-image img {
      max-width: 100%;
      border-radius: 10px;
      object-fit: cover;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
    .product-details {
      margin-top: 30px;
    }
    .product-details p {
      font-size: 1.1rem;
      color: #555;
    }
    .product-details .price {
      font-size: 1.5rem;
      color: #008000;
      font-weight: bold;
    }
    .form-group label {
      font-weight: bold;
    }
    .form-control {
      font-size: 1rem;
      padding: 10px;
    }
    .btn-group {
      display: flex;
      gap: 15px;
      justify-content: space-between;
      margin-top: 20px;
    }
    .btn {
      padding: 12px 20px;
      font-size: 1.1rem;
      font-weight: bold;
    }
    .back-btn {
      margin-top: 20px;
      display: block;
      text-align: center;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Product Header -->
    <div class="product-header">
      <h1><%= product.title %></h1>
      <p><%= product.category %></p>
    </div>

    <!-- Product Details Section -->
    <div class="row product-details mt-4">
      <!-- Product Image -->
      <div class="col-md-6 product-image">
        <% var baseUrl = process.env.API_ORDERS_IMAGE_URL || 'http://localhost:6000'; %>
        <% if (product.image) { %>
          <% if (product.image.startsWith('/uploads/')) { %>
            <img src="<%= baseUrl + '/images' + product.image %>" alt="<%= product.title %>">
          <% } else { %>
            <img src="<%= product.image %>" alt="<%= product.title %>">
          <% } %>
        <% } else { %>
          <img src="/images/placeholder.png" alt="No Image Available">
        <% } %>
      </div>

      <!-- Product Info -->
      <div class="col-md-6">
        <h3 class="price">$<%= product.price.toFixed(2) %></h3>
        <p><strong>Quantity Available:</strong> <%= product.quantity %></p>
        <p><%= product.description %></p>
      </div>
    </div>

    <!-- Back to Products Button -->
    <div class="back-btn">
      <a href="/products/" class="btn btn-secondary">Back to Products</a>
    </div>
  </div>
 <!-- Detect if the page is loaded in an iframe and hide both the navbar and footer if true -->
 <script>
	if (window.self !== window.top) {
	  document.addEventListener("DOMContentLoaded", () => {
		// Hide navbar and footer if in iframe
		document.querySelector('.navbar').style.display = 'none'; // Hide navbar
		document.querySelector('footer').style.display = 'none'; // Hide footer
	  });
	}
 </script>
</body>
</html>
