<%- include('../partials/header') %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border-0 shadow" style="border-radius: 10px;">
        <div class="card-body" style="background-color: #002147; color: #FFD700;">
          <h3 class="card-title text-center">Login to Your Account</h3>
          <form action="/user/login" method="POST">
            <% if (error) { %>
              <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <div class="mb-3"> <!-- Changed form-group to mb-3 -->
              <label for="username" class="form-label">Username</label> <!-- Added form-label class -->
              <input
                type="text"
                name="username"
                id="username"
                class="form-control"
                placeholder="Enter your username"
                required
              />
            </div>
            <div class="mb-3"> <!-- Changed form-group to mb-3 -->
              <label for="password" class="form-label">Password</label> <!-- Added form-label class -->
              <input
                type="password"
                name="password"
                id="password"
                class="form-control"
                placeholder="Enter your password"
                required
              />
            </div>
            <button type="submit" class="btn btn-warning w-100">Login</button> <!-- Changed btn-block to w-100 -->
          </form>
          <div class="text-center mt-3" style="color: #FFD700;">
            <p>Don't have an account? <a href="/register" style="color: #FFD700;">Register here</a></p>
            <p><a href="#" style="color: #FFD700;">Forgot Password?</a></p> <!-- Optional: Add a link for password recovery -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>

<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script> <!-- Ensure jQuery is loaded -->
<script src="//cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script> <!-- Popper.js for tooltips -->
<script src="//cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script> <!-- Updated Bootstrap JS -->

<style>
  body {
    background-color: #f8f9fa; /* Light background color */
  }
  .card {
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }
  .footer {
    margin-top: 50px;
    text-align: center;
    font-size: small;
  }
</style>
