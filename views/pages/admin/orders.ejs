<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../../partials/header"); %>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Orders</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    .order-card {
      border: 2px solid #003366;
      border-radius: 10px;
      background-color: #f9f9f9;
      transition: transform 0.2s, box-shadow 0.2s;
      margin-bottom: 20px;
    }
    .order-card:hover {
      transform: scale(1.02);
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }
    .order-header {
      background-color: #003366;
      color: #fff;
      padding: 10px;
      border-top-left-radius: 10px;
      border-top-right-radius: 10px;
    }
    .order-body {
      padding: 20px;
    }
    .order-actions button {
      background-color: #FFD700;
      border-color: #FFD700;
      color: #003366;
      font-weight: bold;
    }
    .order-actions button:hover {
      background-color: #003366;
      color: #FFD700;
    }
    .badge {
      font-size: 0.9rem;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center text-primary mb-4" style="font-family: 'Arial', sans-serif; font-weight: bold;">Orders</h1>

    <% if (orders.length > 0) { %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% orders.forEach(order => { %>
          <div class="col">
            <div class="order-card shadow-sm">
              <div class="order-header">
                <h5 class="mb-0">
                  Order ID: 
                  <a href="/admin/order/<%= order._id %>" class="text-warning text-decoration-none">
                    <%= order._id %>
                  </a>
                </h5>
              </div>
              <div class="order-body">
                <p><strong>Total Amount:</strong> $<%= order.totalAmount.toFixed(2) %></p>
                <p>
                  <strong>Status:</strong>
                  <span class="badge bg-<%= order.status === 'Pending' ? 'warning' : order.status === 'Shipped' ? 'info' : order.status === 'Delivered' ? 'success' : 'danger' %>">
                    <%= order.status %>
                  </span>
                </p>
                <p><strong>Created At:</strong> <%= new Date(order.createdAt).toLocaleDateString() %></p>
                <p>
                  <strong>Products:</strong>
                  <% if (order.productNames && order.productNames.length > 0) { %>
                    <ul class="list-unstyled">
                      <% order.productNames.forEach(product => { %>
                        <li>
                          <%= product.title %> -
                          <span class="badge bg-<%= 
                            product.status === 'Pending' ? 'warning' : 
                            product.status === 'Shipped' ? 'info' : 
                            product.status === 'Delivered' ? 'success' : 
                            product.status === 'Cancelled' ? 'danger' : 'secondary' %>">
                            <%= product.status %>
                          </span>
                        </li>
                      <% }); %>
                    </ul>
                  <% } else { %>
                    No products available.
                  <% } %>
                </p>
              </div>
              <div class="order-actions d-flex justify-content-end p-3">
                <form action="/order/order/<%= order._id %>/delete" method="POST">
                  <button type="submit" class="btn btn-sm" onclick="return confirm('Are you sure you want to delete this order?')">
                    Delete Order
                  </button>
                </form>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="text-center mt-5">
        <p class="text-muted">You have no orders yet. <a href="/order/" class="text-primary">Start shopping now!</a></p>
      </div>
    <% } %>
  </div>
  <!-- Detect if the page is loaded in an iframe and hide both the navbar and footer if true -->
  <script>
    if (window.self !== window.top) {
      document.addEventListener("DOMContentLoaded", () => {
        document.querySelector('.navbar').style.display = 'none';
        document.querySelector('footer').style.display = 'none';
      });
    }
  </script>
  <%- include("../../partials/footer"); %>
</body>
</html>
