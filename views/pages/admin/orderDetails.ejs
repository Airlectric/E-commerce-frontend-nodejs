<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("../../partials/header"); %>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Order Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      background-color: #eef2f7;
    }
    .container {
      margin-top: 50px;
      background-color: white;
      border-radius: 15px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
      padding: 30px;
    }
    .order-header {
      background-color: #003366;
      color: white;
      padding: 15px;
      border-radius: 10px;
      text-align: center;
    }
    .order-header h1 {
      font-size: 2rem;
      margin: 0;
    }
    .order-info {
      margin-top: 20px;
    }
    .order-info h4 {
      color: #333;
    }
    .table {
      margin-top: 20px;
    }
    .product-image img {
      max-width: 80px;
      border-radius: 5px;
    }
    .btn-group {
      margin-top: 30px;
      display: flex;
      gap: 15px;
      justify-content: center;
    }
    .btn {
      padding: 10px 20px;
      font-size: 1rem;
      font-weight: bold;
    }
  </style>
</head>

<body>
  <div class="container">
    <!-- Flash Messages -->
    <% if (success) { %>
      <div class="alert alert-success" role="alert">
        <%= success %>
      </div>
    <% } %>
    <% if (error) { %>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
    <% } %>

    <!-- Order Header -->
    <div class="order-header">
      <h1>Order Detail</h1>
      <h2>Order ID: <%= order._id %></h2>
    </div>

    <!-- Order Information Section -->
    <div class="order-info">
      <h4>Status:
        <span
          class="badge bg-<%= order.status === 'Pending' ? 'warning' : order.status === 'Shipped' ? 'info' : order.status === 'Delivered' ? 'success' : 'danger' %>">
          <%= order.status %>
        </span>
      </h4>
      <h4>Total Amount: $<%= order.totalAmount.toFixed(2) %></h4>
      <h4>Created At: <%= new Date(order.createdAt).toLocaleDateString() %></h4>
      <h4>Updated At: <%= new Date(order.updatedAt).toLocaleDateString() %></h4>
    </div>

    <!-- Products Table -->
    <h3 class="mt-4">Products in this order:</h3>
    <table class="table table-striped align-middle">
      <thead>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Status</th>
          <th>Price</th>
          <th>Description</th>
          <th>Image</th>
        </tr>
      </thead>
      <tbody>
        <% order.products.forEach(product => { %>
          <tr>
            <td>
              <strong>
                <a href="/products/product/<%= product._id %>" class="text-decoration-none text-primary">
                  <%= product.title %>
                </a>
              </strong>
            </td>
            <td><%= product.quantity %></td>
            <td>
              <span class="badge bg-<%= 
                product.status === 'Pending' ? 'warning' : 
                product.status === 'Shipped' ? 'info' : 
                product.status === 'Delivered' ? 'success' : 
                product.status === 'Cancelled' ? 'danger' : 'secondary' %>">
                <%= product.status %>
              </span>
            </td>
            <td>$<%= parseFloat(product.price).toFixed(2) %></td>
            <td><%= product.description || 'No description available' %></td>
            <td class="product-image">
              <% const baseUrl = process.env.API_ORDERS_IMAGE_URL || "" %>
              <% if (product.image) { %>
                <% if (product.image.startsWith('/uploads/')) { %>
                  <img src="<%= baseUrl %>/images<%= product.image %>" alt="<%= product.title %>" />
                <% } else { %>
                  <img src="<%= product.image %>" alt="<%= product.title %>" />
                <% } %>
              <% } else { %>
                <img src="/images/placeholder.png" alt="No Image Available" />
              <% } %>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <!-- Status Update Form -->
    <h3 class="mt-4">Update Order Status:</h3>
    <form action="/admin/order/<%= order._id %>/status" method="POST" class="mb-4">
      <div class="mb-3">
        <label for="status" class="form-label">Select New Status:</label>
        <select id="status" name="status" class="form-select" required>
          <option value="" disabled selected>Select status</option>
          <option value="Pending" <%= order.status === "Pending" ? "selected" : "" %>>Pending</option>
          <option value="Shipped" <%= order.status === "Shipped" ? "selected" : "" %>>Shipped</option>
          <option value="Delivered" <%= order.status === "Delivered" ? "selected" : "" %>>Delivered</option>
          <option value="Cancelled" <%= order.status === "Cancelled" ? "selected" : "" %>>Cancelled</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Update Status</button>
    </form>

    <!-- Action Buttons -->
    <div class="btn-group">
      <a href="/order/order/<%= order._id %>/edit" class="btn btn-warning">Edit Order</a>
      <form action="/order/order/<%= order._id %>/delete" method="POST" class="d-inline">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this order?')">
          Delete
        </button>
      </form>
      <a href="/admin/orders" class="btn btn-secondary">Back to Orders</a>
      <% if (order.trackingNumber) { %>
        <a href="/order/track/<%= order.trackingNumber %>" class="btn btn-info">Track Shipment</a>
      <% } %>
    </div>
  </div>

  <script>
    // Hide navbar and footer if the page is loaded in an iframe
    if (window.self !== window.top) {
      document.addEventListener("DOMContentLoaded", () => {
        document.querySelector('.navbar').style.display = 'none';
        document.querySelector('footer').style.display = 'none';
      });
    }
  </script>
  <%- include("../../partials/footer") %>
</body>

</html>
