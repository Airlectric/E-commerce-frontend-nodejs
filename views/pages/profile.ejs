<%- include('../partials/header') %>

<style>
  body {
    background-color: #f1f3f6;
    font-family: 'Arial', sans-serif;
  }

  .profile-card {
    background-color: #ffffff;
    border-radius: 15px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    border: 2px solid #001f3f; /* Navy Blue */
  }

  .profile-header {
    background-color: #001f3f; /* Navy Blue */
    padding: 2rem;
    color: #ffd700; /* Gold */
    text-align: center;
  }

  .profile-header img {
    border: 5px solid #ffd700; /* Gold Border */
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
  }

  .profile-header h5 {
    font-size: 1.5rem;
    margin-top: 1rem;
  }

  .profile-header p {
    color: #ffffff;
  }

  .profile-info {
    padding: 2rem;
    color: #495057; /* Dark Gray */
  }

  .profile-info .section-title {
    color: #001f3f; /* Navy Blue */
    font-weight: bold;
    font-size: 1.2em;
  }

  .profile-info .text-muted {
    color: #6c757d !important;
  }

  .btn-warning {
    background-color: #ffd700;
    border-color: #ffd700;
    width: 100%;
    padding: 0.75rem;
    font-size: 1rem;
    font-weight: bold;
  }

  .btn-warning:hover {
    background-color: #ffb700;
    border-color: #ffb700;
  }

  .card-body {
    padding: 0;
  }
  
  .btn-container {
    text-align: center;
    padding: 1rem 0;
  }

  .card-footer {
    background-color: #f1f3f6;
    text-align: center;
    padding: 1rem;
    border-top: 2px solid #001f3f;
  }
</style>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm profile-card">
        <!-- Profile Header -->
        <div class="profile-header">
          <img
            id="profileImage"
            src="<%= user.profileImageUrl || 'https://www.shutterstock.com/image-vector/avatar-gender-neutral-silhouette-vector-600nw-2470054311.jpg' %>"
            alt="User Image"
            class="img-fluid rounded-circle mb-3"
            style="width: 150px; height: 150px; object-fit: cover;"
          />
          <h5><%= user.name || user.username %></h5>
          <p class="text-muted"><%= user.email %></p>
        </div>

        <!-- Profile Information -->
        <div class="profile-info">
          <p class="profile-section">Age: <%= user.age || 'N/A' %></p>
          <p class="profile-section">Location: <%= user.location || 'Not specified' %></p>

          <% if (user.role === 'SHOP_OWNER') { %>
            <!-- Shop Information for Shop Owner -->
            <div class="mt-4">
              <p class="section-title">Shop Details</p>
              <p>Shop Name: <%= user.shopName || 'No shop available' %></p>
              <p>Shop Description: <%= user.shopDescription || 'N/A' %></p>
              <p>Shop Address: <%= user.shopAddress || 'N/A' %></p>
            </div>
          <% } else if (user.role === 'USER') { %>
            <!-- Additional user info can go here -->
          <% } %>
        </div>

        <!-- Edit Profile Button -->
        <div class="btn-container">
          <a href="/edit" class="btn btn-warning">Edit Profile</a>
        </div>

        <!-- Footer -->
        <div class="card-footer">
          <p class="text-muted">Manage your profile details and shop information (if applicable).</p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
